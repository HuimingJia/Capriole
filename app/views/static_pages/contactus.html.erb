<div id="lead" class="row text-center">
  <div class="col-sm-12">
    <h2>Contact Us</h2>
    contact us via email : info@Caprioleedu.com or submit the form below
  </div>
</div>
<hr>

<div id="form" class="row">
  <div class="col-sm-12">
    <div class="col-sm-8">
      <form class="form">
        <div class="form-group">
          <div class="col-sm-6">
            <h8>First Name</h8>
            <input type="text" class="form-control">
          </div>
          <div class="col-sm-6">
            <h8>Second Name</h8>
            <input type="text" class="form-control">
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-6">
            <h8>Email</h8>
            <input type="text" class="form-control">
          </div>
          <div class="col-sm-6">
            <h8>Phone</h8>
            <input type="text" class="form-control">
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-6">
            <h8>Choose your camp</h8>
            <select name="genre" class="form-control select select-primary">
              <option value="None">None</option>
              <option value="Architecture">Architecture Portfolio Workshop in LA</option>
              <option value="Music">Music Summer Camp in LA</option>
              <option value="Chinese">Chinese Summer Camp in Beijing</option>
              <option value="Ice">Ice and Snow Winter Camp in Harbin/Beijing</option>
            </select>
          </div>
          <div class="col-sm-6">
            <h8>Inquire Type*</h8>
            <select name="genre" class="form-control select select-primary">
              <option value="None">None</option>
              <option value="parent">Parent</option>
              <option value="student">Student</option>
              <option value="school">School</option>
              <option value="teacher">Teacher</option>
              <option value="other">Other/Business</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <h8>Message</h8>
            <%= text_area_tag 'message', nil, rows: 5, class: 'form-control'%>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <input id="contact_submit" type="submit" class="btn btn-primary col-sm-12" value="Submit">
          </div>
        </div>
      </form>
    </div>

    <div class="col-sm-4">
      <div class="row">
        <div class="thumbnail">
          <%= image_tag("custservice.jpg") %>
          <div class="caption">
            <h4>Opening Hours</h4>
            <h6>Monday - Friday 08:00-21:00</h6>
            <h6>Saturday & Sunday 10:00-18:00</h6>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
